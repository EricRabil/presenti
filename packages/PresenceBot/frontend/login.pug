extends layout.pug

block styles
  link(rel='stylesheet' href='/assets/login.css')

block content
  div.form-holder
    form.login-form(method='POST' action='/login')
      if error
        div.error-message #{error}
      div.input-set
        input(type='text' autocomplete="username" placeholder='User ID' name='id' aria-label='User ID')
        input(type='password' autocomplete="current-password" placeholder='Password' name='password' aria-label='Password')
      
      button(type='submit' aria-label='Log In') Log In
      if signup
        a(href='/signup') Psst! Need an account?