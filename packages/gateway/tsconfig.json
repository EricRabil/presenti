{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../core-cache"
    },
    {
      "path": "../modules"
    },
    {
      "path": "../shared-infrastructure"
    },
    {
      "path": "../utils"
    }
  ]
}