extends layout.pug

block styles
  link(rel='stylesheet' href='/assets/login.css')

block content
  div.form-holder
    form.login-form(method='POST' action='/changepw')
      if error
        div.error-message #{error}
      else if message
        div.message #{message}
      div.input-set
        input(type='password' autocomplete="current-password" placeholder='Old Password' name='password' aria-label='Old Password')
        input(type='password' autocomplete="new-password" placeholder='New Password' name='newPassword' aria-label='New Password')

      button(type='submit' aria-label='Change Password') Change Password